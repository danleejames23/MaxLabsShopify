<div class="page-header">
  <div class="container">
    <h1 class="page-title">My Account</h1>
    <p class="page-subtitle">Welcome back, {{ customer.first_name }}!</p>
  </div>
</div>

<div class="page-content">
  <div class="container">
    <div style="display: grid; grid-template-columns: 250px 1fr; gap: 60px; max-width: 1200px; margin: 0 auto;">
      <!-- Sidebar -->
      <div>
        <nav style="background: var(--color-background-secondary); border: 1px solid var(--color-border); border-radius: 12px; overflow: hidden;">
          <a href="/account" style="display: block; padding: 15px 25px; border-bottom: 1px solid var(--color-border); background: rgba(0, 255, 127, 0.1); color: var(--color-primary);">
            Order History
          </a>
          <a href="/account/addresses" style="display: block; padding: 15px 25px; border-bottom: 1px solid var(--color-border);">
            Addresses
          </a>
          <a href="/account/logout" style="display: block; padding: 15px 25px; color: var(--color-text-muted);">
            Log Out
          </a>
        </nav>
      </div>
      
      <!-- Main Content -->
      <div>
        <h2 style="font-family: var(--font-heading); margin-bottom: 30px;">Order History</h2>
        
        {% if customer.orders.size > 0 %}
          <div style="background: var(--color-background-secondary); border: 1px solid var(--color-border); border-radius: 12px; overflow: hidden;">
            <table style="width: 100%; border-collapse: collapse;">
              <thead>
                <tr style="background: rgba(0, 255, 127, 0.1);">
                  <th style="padding: 15px 20px; text-align: left; border-bottom: 1px solid var(--color-border);">Order</th>
                  <th style="padding: 15px 20px; text-align: left; border-bottom: 1px solid var(--color-border);">Date</th>
                  <th style="padding: 15px 20px; text-align: left; border-bottom: 1px solid var(--color-border);">Status</th>
                  <th style="padding: 15px 20px; text-align: left; border-bottom: 1px solid var(--color-border);">Total</th>
                </tr>
              </thead>
              <tbody>
                {% for order in customer.orders %}
                  <tr>
                    <td style="padding: 15px 20px; border-bottom: 1px solid var(--color-border);">
                      <a href="{{ order.customer_url }}" style="color: var(--color-primary);">{{ order.name }}</a>
                    </td>
                    <td style="padding: 15px 20px; border-bottom: 1px solid var(--color-border);">
                      {{ order.created_at | date: '%B %d, %Y' }}
                    </td>
                    <td style="padding: 15px 20px; border-bottom: 1px solid var(--color-border);">
                      <span style="display: inline-block; padding: 4px 12px; background: rgba(0, 255, 127, 0.1); border: 1px solid var(--color-primary); border-radius: 50px; font-size: 0.8rem; color: var(--color-primary);">
                        {{ order.fulfillment_status_label }}
                      </span>
                    </td>
                    <td style="padding: 15px 20px; border-bottom: 1px solid var(--color-border);">
                      {{ order.total_price | money }}
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div style="text-align: center; padding: 60px; background: var(--color-background-secondary); border: 1px solid var(--color-border); border-radius: 12px;">
            <p style="color: var(--color-text-muted); margin-bottom: 25px;">You haven't placed any orders yet.</p>
            <a href="/collections/all" class="btn btn-primary">Start Shopping</a>
          </div>
        {% endif %}
        
        <div style="margin-top: 40px; padding: 30px; background: var(--color-background-secondary); border: 1px solid var(--color-border); border-radius: 12px;">
          <h3 style="margin-bottom: 15px;">Account Details</h3>
          <p style="color: var(--color-text-muted);">{{ customer.email }}</p>
          {% if customer.default_address %}
            <p style="color: var(--color-text-muted); margin-top: 10px;">
              {{ customer.default_address | format_address }}
            </p>
          {% endif %}
          <a href="/account/addresses" style="color: var(--color-primary); display: inline-block; margin-top: 15px;">Manage Addresses â†’</a>
        </div>
      </div>
    </div>
  </div>
</div>
