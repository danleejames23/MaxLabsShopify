<div class="page-content" style="min-height: 80vh; display: flex; align-items: center; justify-content: center; padding: 40px 20px;">
  <div style="max-width: 500px; text-align: center;">
    <div style="background: var(--color-background-secondary); border: 2px solid var(--color-primary); border-radius: 20px; padding: 50px 40px; position: relative; overflow: hidden;">
      <div style="position: absolute; top: 0; left: 0; right: 0; height: 5px; background: var(--color-primary);"></div>
      
      <div style="font-family: var(--font-heading); font-size: 1.5rem; font-weight: 800; margin-bottom: 10px;">MAX LABS</div>
      <p style="color: var(--color-text-muted); margin-bottom: 30px;">Gift Card</p>
      
      <div style="font-size: 3rem; font-weight: 800; color: var(--color-primary); margin-bottom: 30px;">
        {{ gift_card.initial_value | money }}
      </div>
      
      {% if gift_card.balance != gift_card.initial_value %}
        <p style="color: var(--color-text-muted); margin-bottom: 20px;">
          Current Balance: {{ gift_card.balance | money }}
        </p>
      {% endif %}
      
      <div style="background: var(--color-background); border: 1px solid var(--color-border); border-radius: 8px; padding: 20px; margin-bottom: 30px;">
        <p style="font-size: 0.8rem; color: var(--color-text-muted); margin-bottom: 10px;">Your gift card code:</p>
        <p style="font-family: monospace; font-size: 1.5rem; font-weight: 700; letter-spacing: 3px; word-break: break-all;">
          {{ gift_card.code | format_code }}
        </p>
      </div>
      
      {% if gift_card.expired %}
        <p style="color: var(--color-error); margin-bottom: 20px;">This gift card has expired.</p>
      {% elsif gift_card.enabled %}
        <p style="color: var(--color-primary); margin-bottom: 20px;">âœ“ Ready to use</p>
      {% endif %}
      
      {% if gift_card.expires_on %}
        <p style="font-size: 0.85rem; color: var(--color-text-muted);">
          Expires: {{ gift_card.expires_on | date: '%B %d, %Y' }}
        </p>
      {% endif %}
      
      <div style="margin-top: 30px;">
        <a href="{{ shop.url }}" class="btn btn-primary">Shop Now</a>
      </div>
      
      <div style="margin-top: 30px;">
        <img src="{{ 'gift-card-qr' | shopify_asset_url }}" alt="QR Code" style="max-width: 120px; margin: 0 auto;">
      </div>
    </div>
    
    <p style="margin-top: 30px; font-size: 0.85rem; color: var(--color-text-muted);">
      Print this page or save the code to use at checkout.
    </p>
  </div>
</div>
