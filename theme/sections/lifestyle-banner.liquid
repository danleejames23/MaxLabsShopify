<style>
  .lifestyle-banner {
    padding: 0;
    overflow: hidden;
  }
  
  .lifestyle-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 4px;
  }
  
  .lifestyle-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }
  
  .lifestyle-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease, filter 0.5s ease;
    filter: brightness(0.7);
  }
  
  .lifestyle-image:hover img {
    transform: scale(1.1);
    filter: brightness(0.9);
  }
  
  .lifestyle-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(0, 255, 127, 0.2) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .lifestyle-image:hover .lifestyle-overlay {
    opacity: 1;
  }
  
  .lifestyle-overlay span {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #fff;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
    padding: 15px 25px;
    border: 2px solid rgba(255,255,255,0.5);
    backdrop-filter: blur(5px);
  }
  
  @media (max-width: 1024px) {
    .lifestyle-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .lifestyle-grid {
      grid-template-columns: 1fr;
    }
    
    .lifestyle-image {
      aspect-ratio: 16/9;
    }
    
    .lifestyle-overlay span {
      font-size: 1rem;
      padding: 10px 20px;
    }
  }
</style>

