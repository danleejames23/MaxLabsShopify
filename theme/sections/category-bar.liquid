<style>
  .category-bar {
    background: var(--color-background-secondary);
    border-bottom: 1px solid var(--color-border);
    padding: 12px 0;
    overflow: hidden;
  }

  .category-marquee {
    display: flex;
    width: max-content;
    animation: category-scroll 25s linear infinite;
  }

  .category-marquee:hover {
    animation-play-state: paused;
  }

  .category-marquee-content {
    display: flex;
    align-items: center;
    gap: 30px;
    padding-right: 30px;
  }

  .category-item {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #fff;
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    white-space: nowrap;
  }

  .category-item strong {
    color: var(--color-primary);
  }

  .category-separator {
    color: var(--color-primary);
    font-size: 0.7rem;
    opacity: 0.6;
  }

  @keyframes category-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .category-item {
      font-size: 0.75rem;
    }
    .category-marquee-content {
      gap: 20px;
      padding-right: 20px;
    }
  }
</style>

